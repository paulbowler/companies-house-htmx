<ul class="list-group">
  <% results.forEach(result => { %>
    <li class="list-group-item list-group-item-action" onclick="collapseResults(this)"
        hx-get="/company/<%= result.company_number %>"
        hx-trigger="click"
        hx-target="#company-details"
        hx-swap="innerHTML">
      <div class="d-flex justify-content-between align-items-center">
        <span><%= result.title %></span>
        <small class="text-muted"><%= result.company_number %></small>
      </div>
    </li>
  <% }) %>
</ul>